{{!
    @template local_hackfest/index_page

    Starting point for an awesome template.

}}
<div data-region="index-page">
  <div id="katest-questions">
  {{#questions}}
    <div>
      <a href="http://www.khanacademy.org/exercise/{{skillname}}" target='_blank' class='katest-skill-button'>
        Question {{position}}
      </a>
    </div>
  {{/questions}}
</div>
  <div>
    <form id="katest-get-results-form" action="grade.php" method="post">
        <input type="hidden" name="timestarted" value="{{timestarted}}"/>
        <input type="hidden" name="timesubmitted" value="0"/>
        <input type="hidden" name="id" value="{{courseid}}"/>
        <input type="hidden" name="k" value="{{katestid}}"/>
        <input type="hidden" name="attempt" value="{{katestattempt}}"/>
        <div style='text-align:center;'>
          <button class='btn btn-primary' id="katest-submit-button">
              Submit test for grading
          </button>
        </div>
    </form>

  </div>
</div>
{{#js}}
    require(['mod_katest/katest'], function(katest) {
        katest.setButtions();
        katest.submitTest();
    });
{{/js}}
