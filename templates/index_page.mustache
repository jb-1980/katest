{{!
    @template local_hackfest/index_page

    Starting point for an awesome template.

}}
<div data-region="index-page">
  <div>
    <label for="katest-password">Password</label>
    <input type="text" id="katest-password"/>
  </div>
  <div id="katest-questions" style="display:none;">
  {{#questions}}
    <div>
      <a href="http://www.khanacademy.org/exercise/{{skillname}}" target='_blank' class='katest-skill-button'>
        Question {{position}}
      </a>
    </div>
  {{/questions}}
</div>
  <div>
    <div style='text-align:center;'>
      <button class='katest-submit-button'>Submit test for grading</button>
    </div>
  </div>
</div>
{{#js}}
    require(['mod_katest/katest'], function(katest) {
        katest.setButtions();
        katest.submitTest();
    });
{{/js}}
